
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="jumbotron text-center">
        <h1>SysAcad</h1>
        <p>Login</p>
    </div>

    <div id="conteudo" class="container" style="margin-top:30px">
        @using (Html.BeginForm("Login", "Login",
                                FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div id="Nome" class="form-group">
                @Html.Label("Login", new { @class = "control-label col-sm-2 text-center" })
                <div class="col-sm-8 text-center">
                    @Html.TextBox("txtLogin", "", new { @class = "form-control", @placeholder = "Digite o login" })
                </div>
            </div>

            <div id="Senha" class="form-group">
                @Html.Label("Senha", new { @class = "control-label col-sm-2 text-center" })
                <div class="col-sm-8 text-center">
                    @Html.TextBox("txtSenha", "", new { @class = "form-control", @placeholder = "Digite a senha" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-12 text-center">
                    <input class="btn btn-primary" type="submit"value="Login" />
                </div>
            </div>
        }
    </div>
    @using (Html.BeginForm("Cadastro", "Login",
                                            FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="col-sm-12 text-center">
            <input class="btn btn-primary" type="submit" value="Cadastrar" />
        </div>
    }
    

</body>
</html>
