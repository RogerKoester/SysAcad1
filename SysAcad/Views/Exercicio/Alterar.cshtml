@model SysAcad.Models.Exercicio

@{
    ViewBag.Title = "Alterar";
        bool isAdmin = ViewBag.IsAdmin;
    if (ViewBag.IsAdmin)
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    SysAcad.Models.Exercicio exercicio=ViewBag.Exercicio;
   }

<h2>Alterar</h2>

@using (Html.BeginForm("Alterar", "Exercicio",
                                        FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Exercicio</h4>
        <hr />
        @Html.Hidden("hdnId", exercicio.ExercicioId)
        @Html.Hidden("hdnDonoId", exercicio.UsuarioDono.UsuarioId)

        <div id="Nome" class="form-group">
            @Html.Label("Nome", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBox("txtNome", exercicio.Nome, new { @class = "form-control", @placeholder = "Digite o nome do produto" })
            </div>
        </div>

        <div id="Descricao" class="form-group">
            @Html.Label("Descrição", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBox("txtLink", exercicio.Link, new { @class = "form-control", @placeholder = "Digite a descrição do produto" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>
