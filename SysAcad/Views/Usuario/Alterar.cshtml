@model SysAcad.Models.Usuario

@{
    ViewBag.Title = "Alterar";
    if (ViewBag.IsAdmin)
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    SysAcad.Models.Usuario usuario = ViewBag.Usuario;
}

<h2>Alterar</h2>

@using (Html.BeginForm("Alterar", "Usuario",
                                                    FormMethod.Post, new { @class = "form-horizontal" }))
{


    <div class="form-horizontal">
        <h4>Usuario</h4>
        <hr />
        @Html.Hidden("hdnId", usuario.UsuarioId)

        <div id="Nome" class="form-group">
            @Html.Label("Nome", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBox("txtNome", usuario.Nome, new { @class = "form-control", @placeholder = "Digite o nome do usuário" })
            </div>
        </div>

        <div id="Nome" class="form-group">
            @Html.Label("CPF", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBox("txtCpf", usuario.CPF, new { @class = "form-control", @placeholder = "Digite o CPF do usuário" })
            </div>
        </div>

        <div id="Nome" class="form-group">
            @Html.Label("Idade", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBox("txtIdade", usuario.Idade, new { @class = "form-control", @placeholder = "Digite a idade do usuário" })
            </div>
        </div>

        <div id="Nome" class="form-group">
            @Html.Label("Gênero", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBox("txtGenero", usuario.Genero, new { @class = "form-control", @placeholder = "Digite o gênero do usuário" })
            </div>
        </div>

        <div id="Nome" class="form-group">
            @Html.Label("Peso", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBox("txtPeso", usuario.Peso, new { @class = "form-control", @placeholder = "Digite o peso do usuário" })
            </div>
        </div>

        <div id="Nome" class="form-group">
            @Html.Label("Altura", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBox("txtAltura", usuario.Altura, new { @class = "form-control", @placeholder = "Digite a altura do usuário" })
            </div>
        </div>

        <div id="Nome" class="form-group">
            @Html.Label("Senha", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBox("txtSenha", usuario.Senha, new { @class = "form-control", @placeholder = "Digite a senha do usuário" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>
